<table>
  <tr>
    <% completions.each_key do |day| %>
      <th><%= day.strftime("%A") %></th>
    <% end %>
  </tr>
  <% activities.each do |a| %>
    <tr>
      <% completions.values.each do |comp| %>
        <td>
          <%= render :partial => "icon", :locals => { :a => a,
                                                      :done => comp[a],
                                                      :icon_style => "icon" } %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>